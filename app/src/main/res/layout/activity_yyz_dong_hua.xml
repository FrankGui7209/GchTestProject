<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@mipmap/dalu"
    tools:context="gcg.testproject.activity.yyz3.YyzDongHuaActivity">
        <RelativeLayout
            android:gravity="center"
            android:id="@+id/rv_dalu"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:clickable="true"
                android:id="@+id/iv_1"
                android:background="@mipmap/dalu1"
                android:layout_width="200dp"
                android:layout_height="180dp"/>
            <ImageView
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:id="@+id/iv_2"
                android:layout_width="210dp"
                android:layout_height="150dp"
                android:background="@mipmap/dalu2"/>
            <ImageView
                android:layout_marginTop="150dp"
                android:clickable="true"
                android:id="@+id/iv_3"
                android:layout_width="200dp"
                android:layout_height="160dp"
                android:background="@mipmap/dalu3"/>
            <ImageView
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/iv_2"
                android:id="@+id/iv_4"
                android:layout_width="200dp"
                android:layout_height="160dp"
                android:background="@mipmap/dalu4"/>
            <ImageView
                android:clickable="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/iv_3"
                android:id="@+id/iv_5"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:background="@mipmap/dalu5"/>
        </RelativeLayout>
</RelativeLayout>
