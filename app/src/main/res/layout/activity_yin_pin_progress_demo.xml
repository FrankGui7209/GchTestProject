<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".activity.YinPinJinDuTiao.YinPinProgressDemoActivity">
    <RelativeLayout
        android:background="@drawable/shape_round_corner_ganda"
        android:id="@+id/rv_yuyin"
        android:layout_width="180dp"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_paly"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ganda_play"/>
        <!--进度条-->
        <FrameLayout
            android:id="@+id/fl_pro"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@id/iv_paly"
            android:layout_centerVertical="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/pro_nor" />

            <ImageView
                android:id="@+id/iv_clip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/clip_img_pro" />

        </FrameLayout>
        <TextView
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@id/fl_pro"
            android:layout_centerVertical="true"
            android:id="@+id/tv_voice_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            tools:text=""/>
    </RelativeLayout>
</LinearLayout>